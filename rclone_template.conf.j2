[hetzner]
type = sftp
host = {{ hetzner_host }}
user = {{ hetzner_user }}
#pass = {{ hetzner_password }}
key_file = /home/ezra/.ssh/id_rsa
port = 23
md5sum_command = md5 -r
sha1sum_command = sha1 -r
shell_type = unix
idle_timeout = 0

[hetzner_encrypted]
type = crypt
password = {{ encryption_password }}
password2 = {{ encryption_salt }}
remote = hetzner:
